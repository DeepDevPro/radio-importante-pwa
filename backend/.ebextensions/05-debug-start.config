commands:
  01_debug_environment:
    command: |
      echo "=== EB Node.js 22 Debug Information ==="
      echo "Current working directory: $(pwd)"
      echo "Node version: $(node --version)"
      echo "NPM version: $(npm --version)"
      echo "Available files:"
      ls -la /var/app/staging || ls -la
      echo "Package.json:"
      cat /var/app/staging/package.json || cat package.json || echo "No package.json found"
      echo "=== End Debug ==="
