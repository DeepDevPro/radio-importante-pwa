commands:
  01_node_fix:
    command: |
      echo "Starting Node.js application fix..."
      cd /var/app/staging
      echo "Current directory: $(pwd)"
      echo "Files present:"
      ls -la
      echo "Package.json content:"
      cat package.json || echo "No package.json found"
      echo "Node version: $(node --version)"
      echo "NPM version: $(npm --version)"
      
  02_start_app:
    command: |
      echo "Testing application start..."
      cd /var/app/staging
      timeout 10s node app-simple.js || echo "Application test completed"
