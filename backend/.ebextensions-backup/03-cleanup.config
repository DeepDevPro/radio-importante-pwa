container_commands:
  01_clear_npm_cache:
    command: "npm cache clean --force"
    ignoreErrors: true
  02_install_deps:
    command: "npm install --production"
    cwd: "/var/app/ondeck"
  03_verify_app:
    command: "node --version && npm --version && ls -la app.js"
    cwd: "/var/app/ondeck"

option_settings:
  aws:elasticbeanstalk:application:environment:
    NPM_USE_PRODUCTION: "true"
